{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "vue-admin-scaffold/element-plus": ["./packages/element-plus/index.ts"],
      "vue-admin-scaffold/element-plus/style.scss": ["./packages/element-plus/src/style/scaffold.scss"]
    }
  },
  "include": [
    "docs",
    "packages"
  ],
  "exclude": [
    "dist",
    "playground"
  ]
}
